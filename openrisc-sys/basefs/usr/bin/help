#!/bin/sh

Main () {

showmenu \
"Choices" \
"Graphic Games" \
"Graphic Demos" \
"Terminal Games" \
"Terminal Demos" \
"Benchmarks" \
"Programming Languages" \
"Network Tools & Web Browsers" \
"Symmetric multiprocessing" \
"Compile Stuff" \
"Start X Server (glxgears, xterm, ...)" \
"Start wayland/weston" \
"Sound" \
"Quit"

case $? in
	0 )
		exit ;;
	1 )
		GGames ;;
	2 )
		GDemos ;;
	3 )
		TGames ;;
	4)
		TDemos ;;
	5)
		Benchmarks ;;
	6)
		Programming ;;
	7)
		Network ;;
	8)
		SMP ;;
	9)
		Compile ;;
	10)
		echo "Loading files from server. This may take a while."
		startx
		exit ;;
	11)
		echo "Loading files from server. This may take a while."
		su -c startweston ;;
	12)
		Sound  ;;
	13)
		exit ;;
esac

}


GGames () {

showmenu \
"Graphic Games" \
"ScummVM            - Monkey Island demo" \
"PrBoom             - Doom" \
"Toppler            - Jump and run. Climb a tower" \
"Frontier: Elite II - Space trading and combat simulator " \
"Back"

case $? in
	0 )
		Main ;;
	1 )
		scummvm ;;
	2)
		prboom -height 400 ;;
	3)
		toppler ;;
	4)
		cd /usr/share/games/frontier
		./frontier ;;
	5)
		Main ;;
esac
	GGames
}

